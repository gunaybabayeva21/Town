@using Town.Models;
@model List<Infotmation>
@{
    int count = 0;
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Basic Table</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <a href="https://wrappixel.com/templates/ampleadmin/" target="_blank" class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">
                    Upgrade to Pro

                </a>
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Basic Table</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /row -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <h3 class="box-title">Basic Table</h3>
                    <p class="text-muted">Add class <code>.table</code></p>
                    <a asp-action="Create"><button class="btn btn-success">Create</button> </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>IconName</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            @foreach (Infotmation item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@(count++)</td>
                                        <td>@item.IconName</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <button class="btn btn-info">Details</button>
                                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Cart" asp-route-id="@item.Id" method="post">Edit</a>
                                            <form asp-action="Delete" asp-controller="Cart" asp-route-id="@item.Id" method="post">
                                                <button class="btn btn-danger">Delete</button>

                                            </form>

                                        </td>
                                    </tr>

                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
